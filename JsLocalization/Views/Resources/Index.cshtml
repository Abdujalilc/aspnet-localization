@{
    ViewBag.Title = "Home Page";
}
<div class="row mb-2">
    <div class="col-lg-12">
        <a href="/Resources/Create" class="btn btn-primary float-start lang m-2" key="create">Create Single</a>
        <a href="/Resources/CreateRange" class="btn btn-primary float-start lang m-2" key="createRange">Create Range</a>
        <a href="/Resources/UpdateResource" class="btn btn-primary float-end lang"  key="updateResource">Update Resource</a>
    </div>
</div>
<hr />
<table id="tblResources" class="table table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Id</th>
            <th class="lang" key="KeyName"></th>
            <th class="lang" key="Value">Value</th>
            <th class="lang" key="CultureName">Culture type</th>
            <th></th>
        </tr>
    </thead>
</table>

@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#tblResources").DataTable({
                "responsive": true,
                "lengthChange": true, "autoWidth": false,
                "processing": true,
                "serverSide": true,
                "filter": true,
                "orderMulti": false,
                "pageLength": 20,
                "lengthMenu": [10, 20, 50, 75, 100],
                "ajax": {
                    "url": "/Resources/ResourcesRead",
                    "type": "POST",
                    "datatype": "json",
                    "data": function (d) {
                    }
                },
                "order": [0, "desc"],
                "columns": [
                    { "data": "id", "name": "ID", "autoWidth": true },
                    { "data": "keyName", "name": "KeyName", "autoWidth": true },
                    { "data": "value", "name": "Value", "autoWidth": true },
                    { "data": "languageName", "name": "LanguageName", "autoWidth": true },
                    {
                        "data": null,
                        "name": "ID",
                        "render": function (data, type, row) {
                            return '<a href="/Resources/Edit?id=' + row.id + '" style="cursor:pointer;">Edit</a>'
                        },
                        "sort": false
                    },
                ]
            });

        });
        function filterLanguage() {
            $('#tblResources').DataTable().ajax.reload();
        }
    </script>
}